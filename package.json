{
	"type": "module",
	"name": "obsidian-pomodoro",
	"version": "1.1.0",
	"description": "A simple Pomodoro timer that lives in your status bar. Left click to start/stop, right click to reset when paused.",
	"main": "main.js",
	"scripts": {
		"dev": "vite build --watch --mode development",
		"build": "vite build --mode production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "npx eslint . --config eslint.config.mjs",
		"lint:fix": "npx eslint . --config eslint.config.mjs --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"obsidian",
		"status bar",
		"pomodoro",
		"timer"
	],
	"author": "Miguel Pimentel",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@jest/globals": "^30.0.4",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.10",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"builtin-modules": "5.0.0",
		"eslint": "^9.30.1",
		"globals": "^16.3.0",
		"jest": "^30.0.4",
		"obsidian": "latest",
		"svelte": "^5.35.2",
		"ts-jest": "^29.4.0",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.6",
		"vite-plugin-static-copy": "^3.1.0"
	}
}